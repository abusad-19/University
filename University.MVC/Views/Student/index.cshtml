@model IEnumerable<University.DAL.Models.Student>;

@{
    ViewData["title"] = "All Student of University";
}

<h1>There are @Model.Count() Student in the below....</h1>

<table class="student table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.StudentId)</th>
            <th>@Html.DisplayNameFor(model=>model.StudentName)</th>
            <th>@Html.DisplayNameFor(model => model.Department)</th>
            <th>@Html.DisplayNameFor(model => model.Session)</th>
            <th>@Html.DisplayNameFor(model => model.Year)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StudentId)</td>
                <td>
                    <a asp-controller="xStudent" asp-action="Index" asp-route-id="@item.StudentId" class="btn btn-info">
                    @item.StudentName
                    </a>
                </td>
                <td>@Html.DisplayFor(modelItem=>item.Department)</td>
                <td>@Html.DisplayFor(modelItem=>item.Session)</td>
                <td>@Html.DisplayFor(modelItem => item.Year)</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info">Delete</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>To add a new student click on the link in the below...</h2>
<a asp-action="Create" class="btn btn-info">Add New Student</a>
