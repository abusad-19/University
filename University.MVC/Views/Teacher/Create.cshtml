@model University.DAL.Models.Teacher;

@{
    ViewData["title"] = "Add Teacher";
}

<form asp-action="Create">
    <div>
        <label asp-for="TeacherId">Teacher ID</label>
        <input asp-for="TeacherId" />
    </div>
    <div>
        <label asp-for="TeacherName">Name</label>
        <input asp-for="TeacherName" />
    </div>
    <div>
        <label asp-for="Department">Department</label>
        <select asp-for="Department" asp-items="@ViewBag.Departments">
            <option value="">select department</option>
        </select>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>