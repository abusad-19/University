@using System.Security.Claims

@{
    ViewData["title"] = "User Profile";
}

@if (User.HasClaim("Permission", "Read_StudentProfile"))
{
    <a asp-action="Index" asp-controller="xStudent" asp-route-id=@User.FindFirst("UserCode")?.Value class="btn btn-info">StudentDashboard</a>
    <br />
}

@if (User.HasClaim("Permission", "Read_DepartmentProfile"))
{
    <div>
        <a href="@Url.Action("Index","xDepartment",new{departmentCode=ViewBag.departmentCode})" class="btn btn-success">
            DepartmentDashboard
        </a>
    </div>
}

@if (User.Identity!.IsAuthenticated)
{ 
    <form method="post" action="/LogIn/Logout">
        <button type="submit">Logout</button>
    </form>
}

        