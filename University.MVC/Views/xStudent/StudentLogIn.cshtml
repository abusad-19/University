@if (ViewBag.Message is not null)
{
    <h2>@ViewBag.Message</h2>
    <form asp-action="StudentLogIn">
        <div>
            <label>StudentId</label>
            <input name="studentId" />
        </div>
        <div>
            <label>Password</label>
            <input name="password" />
        </div>
        <div>
            <button type="submit">LogIn</button>
        </div>
    </form>
}
else
{
    <form asp-action="StudentLogIn">
        <div>
            <label>StudentId</label>
            <input name="studentId" />
        </div>
        <div>
            <label>Password</label>
            <input name="password" />
        </div>
        <div>
            <button type="submit">LogIn</button>
        </div>
    </form>
}


