@model IEnumerable<University.DAL.Models.StudentResult>
@{
    ViewData["title"] = "Result";
}

@if (ViewBag.result is true)
{
    <h2>Result hasn't published yet.</h2>
}
else
{
    <table class="result table">
        <thead>
            <tr>
                <th>CourseName</th>
                <th>Credit</th>
                <th>Mark</th>
                <th>GPA</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.CourseName</td>
                    <td>@item.CourseCredit</td>
                    <td>@item.Mark</td>
                    <td>@item.GPA</td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Your Year Final GPA point is @ViewBag.yearFinal</h2>
}


